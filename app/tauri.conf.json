{
  "$schema": "https://schema.tauri.app/config/1",
  "package": {
    "productName": "FIM",
    "version": "0.0.1"
  },
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:5173",
    "distDir": "dist"
  },
  "tauri": {
    "identifier": "com.example.fim",
    "windows": [
      {
        "title": "FIM",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "bundle": {
      "active": true,
      "targets": ["dmg"],
      "macOS": {
        "minimumSystemVersion": "10.15"
      }
    },
    "security": {
      "csp": null
    }
  }
}
